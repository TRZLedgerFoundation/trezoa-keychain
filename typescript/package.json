{
  "name": "@trezoa/keychain-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Unified Trezoa transaction signing across multiple backends",
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "lint": "eslint packages --ext .ts",
    "lint:fix": "eslint packages --ext .ts --fix",
    "format": "prettier --write \"packages/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,json,md}\"",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@trezoa/eslint-config-trezoa": "^6.0.0",
    "@trezoa/prettier-config-trezoa": "^0.0.6",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.12.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "prettier": "@trezoa/prettier-config-trezoa",
  "packageManager": "pnpm@10.14.0"
}